<!--pages/form_start/form_start.wxml-->
<page-meta root-font-size="system"/>
<view class="page" data-weui-theme="{{theme}}" data-weui-mode="{{mode}}">
	<view class="weui-form">
    <view class="weui-form__bd">
      <view class="weui-form__text-area">
        <h2 class="weui-form__title">请填写你的兵役登记信息</h2>
      </view>
      <view class="weui-form__control-area">
        <view class="weui-cells__group weui-cells__group_form">
          <view class="weui-cells">
            <!-- 班级选择框 -->
            <view class="weui-cell weui-cell_active weui-cell_select weui-cell_select-after">
              <view class="weui-cell__hd">
                <label class="weui-label" style="width: 3em;">班级</label>
              </view>
              <view class="weui-cell__bd weui-flex marker-left">
                <picker aria-role="combobox" bindchange="setGcOption" range="{{ gc_options }}" value="{{ gc_index }}">
                    <view class="weui-select">{{ gc_options[gc_index] }}</view>
                </picker>
              </view>
            </view>
            <!-- 姓名输入框 -->
            <view class="weui-cell weui-cell_active">
              <view class="weui-cell__hd"><label class="weui-label">姓名</label></view>
              <view class="weui-cell__bd weui-flext">
                <input
                    class="weui-input"
                    type="text"
                    placeholder="请输入姓名"
                    placeholder-class="weui-input__placeholder"
                    bindinput="onNameInput"
                />
              </view>
            </view>
            <!-- 性别选择框 -->
            <view class="weui-cell weui-cell_active weui-cell_select weui-cell_select-after">
              <view class="weui-cell__hd">
                <label class="weui-label" style="width: 3em;">性别</label>
              </view>
              <view class="weui-cell__bd weui-flex marker-left">
                <picker aria-role="combobox" bindchange="setGenderOption" range="{{ gender_options }}" value="{{ gender_index }}">
                    <view class="weui-select">{{ gender_options[gender_index] }}</view>
                </picker>
              </view>
            </view>
            <!-- 身份证号输入框 -->
            <!-- 户籍所在地输入框 -->
            <!-- 兵役登记结论选择框 -->
            <!-- 是否预备役登记选择框 -->
          </view>
        </view>
      </view>
		</view>
    <view class="weui-form__ft">
      <view class="weui-form__opr-area">
        <view class="weui-btn weui-btn_primary" aria-role="button">提交</view>
      </view>
		</view>
	</view>
</view>